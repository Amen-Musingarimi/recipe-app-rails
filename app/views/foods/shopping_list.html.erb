<div class="mt-4 col-md-9 mx-auto">
  <div class="text-center mb-5">
    <h2>Shopping List</h2>
  </div>

<%= render partial: 'shared/shopping_info', locals: { total_food_items: @total_food_items, total: @total } %>

  <table class="table table-striped table-bordered">
    <thead class="table-light">
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% if @total_food_items > 0 %>
        <% @shopping_list.each do |item| %>
          <tr>
            <td><%= item[:food].name %></td>
            <td><%= item[:quantity] %></td>
            <td><%= number_to_currency(item[:value]) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
