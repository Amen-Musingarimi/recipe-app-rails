<%= link_to 'Add New Food', new_food_path %>
<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td>
          <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


